<section data-section-id="{{ section.id }}" data-section-type="jewelili-ask-jenie">
  <div class="page-width">
    <div class="jewelili__ask-jenie">
      <div class="ask-jenie-logo">
        {% unless section.settings.logo_image == nil %}
        <img class="lazyload"
             src="{{ section.settings.logo_image | img_url: '300x' }}"
             data-src="{{ section.settings.logo_image | img_url: '300x' }}"
             data-sizes="auto"
             alt="" />
        {% endunless %}
      </div>
      <div class="ask-jenie-form">
        {% unless section.settings.title == blank %}
          <h3 class="h3">{{ section.settings.title }}</h2>
        {% endunless %}
        {% unless section.settings.subtitle == blank %}
          <h4 class="h4">{{ section.settings.subtitle }}</h4>
        {% endunless %}
        <form>
          <div class="iwish-form">
            <select id="buying-for">
              <option value="hide">Who are you buying it for?</option>
              <option value="Buying for option1" rel="icon-temperature">Buying for option1</option>
              <option value="Buying for option2">Buying for option1</option>
              <option value="Buying for option3">Buying for option2</option>
              <option value="Buying for option4">Buying for option3</option>
              <option value="Buying for option5">Buying for option4</option>
            </select>
            <select id="occasion">
              <option value="hide">Which occasion are you celebrating?</option>
              <option value="Occasion 1" rel="icon-temperature">Occasion 1</option>
              <option value="Occasion 2">Occasion 2</option>
              <option value="Occasion 3">Occasion 3</option>
              <option value="Occasion 4">Occasion 4</option>
              <option value="Occasion 5">Occasion 5</option>
            </select>
            <select id="jewelry-type">
              <option value="hide">What type of jewelry are you looking for?</option>
              <option value="Type of jewelry 1" rel="icon-temperature">Type of jewelry 1</option>
              <option value="Type of jewelry 2">Type of jewelry 2</option>
              <option value="Type of jewelry 3">Type of jewelry 3</option>
              <option value="Type of jewelry 4">Type of jewelry 4</option>
              <option value="Type of jewelry 5">Type of jewelry 5</option>
            </select>
            <select id="stone-type">
              <option value="hide">What is your favorite stone?</option>
              <option value="Stone 1" rel="icon-temperature">Stone 1</option>
              <option value="Stone 2">Stone 2</option>
              <option value="Stone 3">Stone 3</option>
              <option value="Stone 4">Stone 4</option>
              <option value="Stone 5">Stone 5</option>
            </select>
            <button type="submit">I WISH</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Ask Jenie Form",
	"class": "index-section jewelili-ask-jenie-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo_image",
        "label": "Image",
        "info": "Recommended size 618x500"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Title"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Subtitle"
      }
	],
    "presets": [
      {
        "name": "Ask Jenie Form",
        "category": "Advanced layout"
      }
    ]
  }
{% endschema %}

