{% comment %}
** Mega menu - homepage partial **
- Static section
- Uses blocks
- Must be enabled through general settings
{% endcomment %}

<div class="seasonal-deal-section page-width">
  <header class="header-title-wrapper">
    {% if section.settings.seasonal-heading != blank %}
    <h3 class="header--sub-heading">{{ section.settings.seasonal-heading }}</h3>
    {% endif %}
    {% if section.settings.seasonal-subheading != blank %}
    <h6 class="header--main-heading">{{ section.settings.seasonal-subheading }}</h6>
    {% endif %}
  </header>
  <div class="image-text">
    <div class="season-text grid grid--uniform">
      {% for block in section.blocks %}
      <div class="section-text-wrapper  grid__item small--one-whole medium-up--one-third">
        <a class="text-block" href="{{ block.settings.deal-url }}" style="background:{{ block.settings.color }};">
          <p class="title">{{ block.settings.deal-heading }}</p>
          <p class="sub-text">{{ block.settings.deal-subheading }}</p>
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Seasonal Deal Section",
  "class": "index-section seasonal-deal-section",
  "max_blocks": 3,
  "settings": [
  {
    "type": "text",
    "id": "seasonal-heading",
    "label": "Heading",
    "default": "Jewelili seasonal deals"
  },
  {
    "type": "text",
    "id": "seasonal-subheading",
    "label": "Sub Heading",
    "default": "Select styles at a great value"
  }
  ],
  "blocks": [
  {
    "type": "image_picker",
    "name": "Image Text block",
    "settings": [
      {
        "type": "text",
        "id": "deal-heading",
        "label": "Heading text"
      },
      {
        "type": "text",
        "id": "deal-subheading",
        "label": "Sub heading text"
      },
      {
        "type": "url",
        "id": "deal-url",
        "label": "Block URL"
      },
      {
        "type": "color",
        "id": "color",
        "label": "Background color"
      }
    ]
  }
  ],
  "presets": [
  {
    "name": "Seasonal Deal",
    "category": "Promotional"
  }
  ]
}

{% endschema %}