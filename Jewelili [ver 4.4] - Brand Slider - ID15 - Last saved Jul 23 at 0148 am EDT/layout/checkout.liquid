    <style>
      .tag__button {
        background: transparent
      }

      .tag__button:hover {
        border-width: 0px
      }

      #discount-wrapper {
        display: none
      }

      .discount-button-wrapper {
        display: flex;
        clear: both;
        margin-bottom: 0;
        padding-bottom: 20px;
        padding-top: 15px
      }

      .discount-button-wrapper .svg-wrapper {
        margin-right: 7px
      }

      .discount-button-wrapper .discount-wrapper {
        flex-grow: 1
      }

      .discount-button-wrapper .section__discount {
        background: #EBEBEB;
        padding: 0;
        margin-bottom: 10px;
        border-radius: 4px;
        display: flex;
        flex-direction: column
      }

      .discount-button-wrapper .section__discount-code {
        display: flex;
        padding: 10px 13px
      }

      .discount-button-wrapper .discount-code-wrapper {
        display: flex;
        flex-grow: 1;
        justify-content: space-between;
        align-items: center
      }

      .discount-button-wrapper .field__input-btn {
        visibility: hidden;
        opacity: 0
      }

      .discount-button-wrapper .code-off,
      .discount-button-wrapper #apply-discount {
        margin-bottom: 0;
        font-size: 13px;
        line-height: 1;
        font-weight: 600
      }

      .discount-button-wrapper .code-off {
        color: #707070
      }

      .discount-button-wrapper #apply-discount {
        color: #BA3626;
        text-transform: uppercase;
        cursor: pointer
      }

      .discount-button-wrapper #apply-discount span:last-child {
        display: none
      }

      .discount-button-wrapper .applied-discount span:first-child {
        display: none
      }

      .discount-button-wrapper .applied-discount span:last-child {
        display: inline-block !important
      }

      .discount-button-wrapper .applied-discount #apply-discount {
        pointer-events: none
      }

      .discount-button-wrapper .code-button a {
        font-size: 10px;
        letter-spacing: 0.1px;
        line-height: 14px;
        color: #BA3626
      }

      .discount-button-wrapper .discount-details h5 {
        font-size: 12px;
        font-weight: 600;
        padding: 0
      }

      .discount-button-wrapper .section__discount-description {
        padding: 10px 13px 15px;
        border-top: 1px solid #fff;
      }

      .discount-button-wrapper .details ul {
        padding-left: 10px;
        margin-bottom: 0;
        margin-top:5px;  
      }

      .discount-button-wrapper .details li {
        font-size: 12px;
        line-height: 15px
      }

      .discount-button-wrapper .disabled-discount #apply-discount {
        pointer-events: none;
        color: #AEAEAE
      }
      
      .discount-title {
        font-size: 16px;
        font-weight: 600;
        margin-top: 20px;
        color: #323232;
      }
      @media (min-width: 768px) {
        .tags-list .tag{
          margin-bottom: .8571428571em;
        }
      }

      @media (max-width: 767px) {
        .discount-button-wrapper .btn--disabled {
          display: none
        }
      }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
      var shippingPincode = "{{ checkout.shipping_address.zip }}";
      var shippingCountry = "{{ checkout.shipping_address.country  }}"
      console.log(shippingPincode,shippingCountry);
      if(shippingPincode == '33166'){
        window.location.href = "https://www.google.com/"
      }
    </script>
    
    {% include 'checkout-sf-conversion-code' %}
    
  </head>
  <body>

    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-W8PV6ZJ"
                      height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>
    
    {% if page_title contains "Shipping" %}
    <div class="full-page-overlay shipping__overlay">
      <div class="full-page-overlay__wrap">
        <div class="full-page-overlay__content">
          {{ content_for_logo }}

          <p class="full-page-overlay__text">
            We're processing...
          </p>
        </div>
      </div>
    </div>
    {% endif %}

    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          <header class="main__header" role="banner">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </header>
          <main class="main__content" role="main">
            {{ content_for_layout }}
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </aside>
      </div>
    </div>
    
	{% render 'one-click-discount' %}
    {% render 'skip-shipping' %}
    {% render 'extra-script' %}
    {{ tracking_code }}
    
  </body>
</html>
