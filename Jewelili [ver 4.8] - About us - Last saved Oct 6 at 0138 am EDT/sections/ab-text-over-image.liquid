{% if section.settings.enable_section %}
<section>
  <div class="page-width">
    <div class="banner-wrapper">
      <img class="lazyload small--hide" 
           src="{{ section.settings.image_desk | img_url: 'master' }}"
           data-src="{{ section.settings.image_desk | img_url: 'master' }}" 
           data-sizes="auto" 
           alt="" />
      
      <img class="lazyload medium-up--hide" 
           src="{{ section.settings.image_mob | img_url: 'master' }}"
           data-src="{{ section.settings.image_mob | img_url: 'master' }}" 
           data-sizes="auto" 
           alt="" />
      
      <div class="banner-text small--text-center">
        {% if section.settings.text != blank %}
        {{ section.settings.text }}
        {% endif %}
        {% if section.settings.button_label and section.settings.button_url != blank %}
        <a href="{{ section.settings.button_url }}" class="banner-btn">
          {{ section.settings.button_label }}
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 15.819 15.819"><g id="Right_Arrow" data-name="Right Arrow" transform="translate(0 0)"><path id="Path_198132" data-name="Path 198132" d="M16.65-69.239a7.963,7.963,0,0,0,7.91-7.91,7.975,7.975,0,0,0-7.917-7.91,7.967,7.967,0,0,0-7.9,7.91A7.968,7.968,0,0,0,16.65-69.239Zm4.529-7.917a.724.724,0,0,1-.24.527l-2.97,2.962a.7.7,0,0,1-.465.186.639.639,0,0,1-.651-.644.666.666,0,0,1,.2-.473l1.093-1.07L19.2-76.56l-1.869.07H12.788a.633.633,0,0,1-.659-.667.637.637,0,0,1,.659-.667h4.544l1.869.078-1.055-.884-1.093-1.086a.681.681,0,0,1-.2-.465.639.639,0,0,1,.651-.644.657.657,0,0,1,.465.178l2.97,2.97A.688.688,0,0,1,21.178-77.157Z" transform="translate(-8.74 85.059)" fill="#fefefe"/></g></svg>
        </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>
{% endif %}

{% schema %}
  {
    "name": "Text over image",
	"class": "ab-text-over-image",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_section",
        "label": "Enable section",
        "default": true
      },
	  {
        "type": "image_picker",
        "id": "image_desk",
        "label": "Image (Desktop)",
        "info": "Recommended size: 1280px * 400px"
      },
	  {
        "type": "image_picker",
        "id": "image_mob",
        "label": "Image (Mobile)",
        "info": "Recommended size: 414px * 530px"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Banner text goes here.</p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "default": "Konw more"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button link"
      }
	]
  }
{% endschema %}

