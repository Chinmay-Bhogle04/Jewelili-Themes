<!-- collection-slider.liquid -->
<div class="page-width">
  {% if section.settings.title != blank or section.settings.subtitle != blank %}
  <div class="section-header text-center header-title-wrapper">
    {% if section.settings.title != blank %}
    <h2 class="h3 header--sub-heading">{{ section.settings.title | escape }}</h2>
    {% endif %}
    {% if section.settings.subtitle != blank %}
    <h5 class="sub-title header--main-heading">{{ section.settings.subtitle | escape }}</h5>
    {% endif %}
  </div>
  {% endif %}
  
  <div class="collection_slider grid grid--uniform">
    {% for block in section.blocks %}
    <div class="collection_grid grid__item small--one-whole medium-up--one-third">
      {% assign collection = collections[block.settings.collection] %}
      <a href="{{ collection.url }}">
        {%- assign img_url = block.settings.collection_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
        <div class="hover_image">
          <div class="custom__image__wrapper" style="padding-top:{{ 1 | divided_by: block.settings.collection_image.aspect_ratio | times: 100}}%;">
            <img class="custom__image lazyload image_scale"
                 data-src="{{ img_url }}"
                 data-widths="[180, 360, 540]"
                 data-sizes="auto"
                 alt="" />
          </div>
        </div>
        <span class="btn_style1">
          {% if block.settings.collection_title != blank %}
          {{ block.settings.collection_title }}
          {% else %}
          {{ collection.title }}
          {% endif %}
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 28 28"><defs><style>.black_arrow_a{fill:#fff;opacity:0;}.black_arrow_c{fill:#292D36;}</style></defs><g transform="translate(-395 -1235)"><rect class="black_arrow_a" width="28" height="28" transform="translate(395 1235)"/><g class="black_arrow_b" transform="translate(396.512 1237)"><path class="black_arrow_c" d="M21.24-60.059a12.585,12.585,0,0,0,12.5-12.5,12.6,12.6,0,0,0-12.512-12.5A12.59,12.59,0,0,0,8.74-72.559,12.593,12.593,0,0,0,21.24-60.059ZM28.4-72.571a1.144,1.144,0,0,1-.38.833l-4.694,4.681a1.1,1.1,0,0,1-.735.294,1.01,1.01,0,0,1-1.029-1.017,1.053,1.053,0,0,1,.319-.748l1.728-1.691,1.667-1.409-2.953.11H15.137A1,1,0,0,1,14.1-72.571a1.007,1.007,0,0,1,1.042-1.054h7.181l2.953.123-1.667-1.4-1.728-1.716a1.075,1.075,0,0,1-.319-.735,1.01,1.01,0,0,1,1.029-1.017,1.038,1.038,0,0,1,.735.282l4.694,4.694A1.087,1.087,0,0,1,28.4-72.571Z" transform="translate(-8.74 85.059)"/></g></g></svg>
        </span>
      </a>
      {% if block.settings.image_ontop != blank %}
      <div class="image-on-top">
        <img class="lazyload"
        data-src="{{ block.settings.image_ontop | img_url: 'master' }}"
        data-sizes="auto"
        alt="" />
      </div>
      {% endif %}
    </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Collection Slider",
  "class": "index-section jewelili-collection-section",
  "max_blocks": 12,
  "settings": [
  {
    "type": "text",
    "id": "title",
    "label": "Heading",
    "default": "Slider title"
  },
  {
    "type": "text",
    "id": "subtitle",
    "label": "Collection Sub Title",
    "default": "Because celebrations donâ€™t need a reason."
  }
  ],
  "blocks": [
  {
    "type": "featured_collection",
    "name": "Collection",
    "settings": [
    {
      "type": "image_picker",
      "id": "collection_image",
      "label": "Collection Image",
      "info": "Recommended size 748x564"
    },
    {
      "type": "image_picker",
      "id": "image_ontop",
      "label": "Top Bottom Image",
      "info": "Recommended size 190x212"
    },
    {
      "type": "text",
      "id": "collection_title",
      "label": "Collection Title"
    },
    {
      "label": "Collection",
      "id": "collection",
      "type": "collection"
    }
    ]
  }
  ],
  "presets": [
  {
    "name": "Collection Slider",
    "category": "Collection",
    "blocks": [
    {
      "type": "featured_collection"
    },
    {
      "type": "featured_collection"
    },
    {
      "type": "featured_collection"
    }
    ]
  }
  ]
}
{% endschema %}
