{% comment %}
** Mega menu - homepage partial **
- Static section
- Uses blocks
- Must be enabled through general settings
{% endcomment %}

{% include 'mega__menu', menu_name : "mega-menu-1" %}

{% schema %}
  {
    "name": "Megamenu (Brands)",
    "class": "mega-menu-section",
    "max_blocks": 6,
    "settings": [
      {
        "type": "text",
        "id": "parent",
        "label": "Link title",
        "info": "The mega menu will appear below this parent link"
      }
    ],
    "blocks": [
      {
        "type": "megamenu_nav",
        "name": "Menu",
        "settings": [
          {
            "type": "collection",
            "id": "collection_url",
            "label": "Brand Url"
          },
          {
            "type": "image_picker",
            "id": "brand_image",
            "label": "Brand Image",
			"info": "Recommended image size 200x95 (px)"
          }
        ]
      }
    ]
  }
  
  {% endschema %}
  