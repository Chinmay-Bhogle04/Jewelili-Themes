<!-- Five-block-collection-banner.liquid -->
<div class="page-width four-block-banner">
  {% if section.settings.seasonal-heading != blank or section.settings.seasonal-subheading != blank %}
  <header class="header-title-wrapper">
    {% if section.settings.seasonal-heading != blank %}
    <h3 class="header--sub-heading">{{ section.settings.seasonal-heading }}</h3>
    {% endif %}
    {% if section.settings.seasonal-subheading != blank %}
    <h6 class="header--main-heading">{{ section.settings.seasonal-subheading }}</h6>
    {% endif %}
  </header>
  {% endif %}
  <div class="grid {% if section.settings.one-half-banner %}one-half-block-sldier{% else %}five-block-collection-slider{% endif%}">
    {% for block in section.blocks %}
    <div class="grid__item {% if section.settings.one-half-banner %}one-whole{% else %}medium-up--one-fifth{% endif %}">
      {% if block.settings.enable_image %}
      {% if block.settings.image != blank %}
      {%- assign img_url = block.settings.image | img_url: 'master' -%}
      {%- assign img_url_mob  = block.settings.image_mob | img_url: 'master' -%}
      <div class="js hover_image">
        <a {% if block.settings.tackin_id != blank %}id="{{ block.settings.tackin_id }}"{% endif %} {% if block.settings.button_link != blank %}href="{{ block.settings.button_link }}"{% endif %}>
          <div class="custom__image__wrapper {% if block.settings.image_mob != blank %}small--hide{% endif %}">
            <img class="lazyload image_scale" data-src="{{ img_url }}" data-widths="[142, 200, 210, 380, 414, 767, 1024, 1280]"data-aspectratio="{{ block.settings.image.aspect_ratio }}" 
                 data-sizes="auto" alt="{{ block.settings.image.alt | escape }}">
          </div>
          {% if block.settings.image_mob != blank %}
          <div class="custom__image__wrapper medium-up--hide">
            <img class="lazyload" data-src="{{ img_url_mob }}" data-widths="[330, 345, 380, 414, 501, 767]"
                 data-aspectratio="{{ block.settings.image_mob.aspect_ratio }}" data-sizes="auto" alt="{{ block.settings.image_mob.alt | escape }}">
          </div>
          {% endif %}
        </a>
      </div>
      {% endif %}
      {% endif %}
      {% if block.settings.title != blank %}
      <p class="four-grid-title">{{ block.settings.title }}</p>
      {% endif %}
    </div>

    {% endfor %}
  </div>
</div>

{% schema %}
{
"name": "Five block slider",
"class": "index-section collection-five-blocks",
"settings": [
{
"type": "text",
"id": "seasonal-heading",
"label": "Heading",
"default": "Jewelili seasonal deals"
},
{
"type": "text",
"id": "seasonal-subheading",
"label": "Sub Heading",
"default": "Select styles at a great value"
},
{
"type": "checkbox",
"id": "one-half-banner",
"label": "One whole banner",
"default": false
}
],
"blocks": [
{
"type": "text_block",
"name": "Image",
"settings": [
{
"type": "checkbox",
"id": "enable_image",
"label": "Show image",
"default": true
},
{
"type": "image_picker",
"id": "image",
"label": "Desktop Image"
},
{
"type": "image_picker",
"id": "image_mob",
"label": "Mobile Image"
},
{
"type": "text",
"id": "title",
"label": "Block title"
},
{
"type": "text",
"id": "tackin_id",
"label": "Tracking ID"
},
{
"type": "url",
"id": "button_link",
"label": "Banner link"
}
]
}
],
"presets": [
{
"name": "Five Block collection Slider",
"category": "Image"
}
]
}
{% endschema %}