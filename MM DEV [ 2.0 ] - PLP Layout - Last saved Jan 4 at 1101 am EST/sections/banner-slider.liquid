<section data-section-id="{{ section.id }}" data-section-type="jewelili-banner-section">
  <div class="jewelili__banner">
    {% for block in section.blocks %}
    {% if block.settings.enable_banner %}
    <a href="{{ block.settings.button_url }}">
      <div class="jewelili__banner-slide " id="block-{{ block.id }}">
        {% unless block.settings.banner_large == nil %}
        <img class="lazyload small--hide"
             src="{{ block.settings.banner_large | img_url: 'master' }}"
             data-src="{{ block.settings.banner_large | img_url: 'master' }}"
             data-sizes="auto"
             alt="" />
        {% endunless %}
        {% unless block.settings.banner_small == nil %}
        <img class="lazyload medium-up--hide"
             src="{{ block.settings.banner_small | img_url: 'master' }}"
             data-src="{{ block.settings.banner_small | img_url: 'master' }}"
             data-sizes="auto"
             alt="" />
        {% endunless %}
        <div class="page-width jewelili__banner-text
                    {% if block.settings.horizontal_alignment == 'center' %} content_center-aligned{% endif %}
                    {% if block.settings.horizontal_alignment == 'right' %} content_right-aligned{% endif %}">
          <div class="jewelili__banner-text-container
                      {% if block.settings.vertical_alignment == 'middle' %} content_middle-aligned{% endif %}
                      {% if block.settings.vertical_alignment == 'bottom' %} content_bottom-aligned{% endif %}
                      {% if block.settings.text_align == 'center' %} text-center{% endif %}
                      {% if block.settings.text_align == 'right' %} text-right{% endif %}
                      {% if block.settings.full_width_content and block.settings.textand_button_align == 'text_left'%} full-width-alignment1{% endif %}
                      {% if block.settings.full_width_content and block.settings.textand_button_align == 'text_right'%} full-width-alignment2{% endif %}"
               style="max-width:{{ block.settings.max-width }}px;">
            {% if block.settings.banner_small_icon != blank %}
            <img class="lazyload small--hide"
                 src="{{ block.settings.banner_small_icon | img_url: 'master' }}"
                 data-src="{{ block.settings.banner_small_icon | img_url: 'master' }}"
                 data-sizes="auto"
                 alt="" />
            {% endif %}
            {% unless block.settings.title == blank %}
            <h1 style="font-size:{{ block.settings.title_font_size }}px;">{{ block.settings.title }}</h1>
            <img style="width: 100%;max-width: 100%;margin: -20px 0 -10px;" src="https://cdn.shopify.com/s/files/1/0252/9620/7926/files/line.png?v=1605773514">
            {% endunless %}
            {% unless block.settings.subtitle == blank %}
            <p style="font-size:{{ block.settings.title_font_size }}px;">{{ block.settings.subtitle }}</p>
            {% endunless %}

            {% unless block.settings.button_label == blank %}
            <span class="button-wrapper">
              <a href="{{ block.settings.button_url }}" class="btn_style1">{{ block.settings.button_label }}</a>
            </span>
            {% endunless %}
          </div>
        </div>
        <style>
          #block-{{ block.id }} h1,#block-{{ block.id }} p{
            color:{{ block.settings.color }};
          }
          #block-{{ block.id }} .btn_style1{
            border: 3px solid #5f311a;
            color: #5f311a;
          }
        </style>
      </div>
    </a>

    {% endif %}

    {% endfor %}
  </div>
</section>
{% schema %}
  {
    "name": "Banner Slideshow",
    "class": "index-section index-section--flush",
    "blocks": [
      {
        "type": "banner-content",
        "name": "Banner Content",
        "settings": [
		  {
            "type": "checkbox",
            "id": "enable_banner",
            "label": "Enable Banner"
          },
          {
            "type": "image_picker",
            "id": "banner_large",
            "label": "Banner Image (Desktop)",
            "info": "Recommended size 2562x1298 (px)"
          },
		  {
            "type": "image_picker",
            "id": "banner_small",
            "label": "Banner Image (Mobile)",
            "info": "Recommended size 800x1470 (px)"
          },
		  {
            "type": "image_picker",
            "id": "banner_small_icon",
            "label": "Banner Image icon"
          },
		  {
             "type": "select",
             "id": "horizontal_alignment",
             "label": "Content Alignment (Horizontal)",
             "options": [
               {
                 "value": "left",
                 "label": "Left"
               },
               {
                 "value": "center",
                 "label": "Center"
               },
               {
                 "value": "right",
                 "label": "Right"
               }
             ],
             "default": "left"
          },
		  {
             "type": "select",
             "id": "vertical_alignment",
             "label": "Content Alignment (Vertical)",
             "options": [
               {
                 "value": "top",
                 "label": "Top"
               },
               {
                 "value": "middle",
                 "label": "Middle"
               },
               {
                 "value": "bottom",
                 "label": "Bottom"
               }
             ],
             "default": "top"
          },
		  {
             "type": "select",
             "id": "text_align",
             "label": "Text Align",
             "options": [
               {
                 "value": "left",
                 "label": "Left"
               },
               {
                 "value": "center",
                 "label": "Center"
               },
               {
                 "value": "right",
                 "label": "Right"
               }
             ],
             "default": "left"
          },
          {
            "type": "checkbox",
            "id": "full_width_content",
            "label": "Text and button side by side",
            "default": false
          },
		  {
             "type": "select",
             "id": "textand_button_align",
             "label": "Text & Button Align",
             "options": [
               {
                 "value": "text_left",
                 "label": "Text Left Button Right"
               },
               {
                 "value": "text_right",
                 "label": "Text Right Button Left"
               }
             ],
             "default": "text_left"
          },
		  {
            "type": "color",
            "id": "color",
            "label": "Color"
          },
		  {
            "type": "text",
            "id": "max-width",
            "label": "Text max width"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Title"
          },
		  {
            "type": "text",
            "id": "title_font_size",
            "label": "Title font size",
            "default": "57"
          },
		  {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle",
            "default": "Subtitle"
          },
		  {
            "type": "text",
            "id": "subtitle_font_size",
            "label": "Subtitle font size",
            "default": "57"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button Label",
            "default": "Shop Now"
          },
          {
            "type": "url",
            "id": "button_url",
            "label": "Button URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Banner Slideshow",
        "category": "Advanced layout"
      }
    ]
  }
{% endschema %}