{% unless section.settings.hide_collection %}
  <section data-section-id="{{ section.id }}" data-section-type="jewelili-cart-slider">
    {%- if section.settings.heading != blank -%}
    <div class="section-header text-center">
      <h2>{{ section.settings.heading | escape }}</h2>
      {%- if section.settings.subheading != blank -%}
      <h4>{{ section.settings.subheading }}</h4>
      {% endif %}
    </div>
    {%- endif -%}
    <div class="mm__gesture-slider">
      {%- for product in collections[section.settings.cart_collection].products limit: 4 -%}
      {% include 'product-card-grid', max_height: 250, product: product %}
      {%- endfor -%}
    </div>
  </section>
{% endunless %}

{% schema %}
  {
    "name": "Collection Slider",
    "settings": [
      {
        "type": "checkbox",
        "id": "hide_collection",
        "label": "Hide Collection",
        "default": false
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Whats not to love, check out more styles"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      },
      {
        "type": "collection",
        "id": "cart_collection",
        "label": "Select Collection"
      }
	]
  }
{% endschema %}

